#!/bin/sh
set -e
if [ -n "$D" ] ; then
	$INTERCEPT_DIR/postinst_intercept update_font_cache ttf-dejavu-serif mlprefix= binprefix= \
		'bindir="/usr/bin"' \
		'libdir="/usr/lib"' \
                'libexecdir="/usr/libexec"' \
		'base_libdir="/lib"' \
		'fontconfigcachedir="/var/cache/fontconfig"' \
		'fontconfigcacheparams="-v"' \
		'fontconfigcacheenv="FC_DEBUG=1"'
else
	FC_DEBUG=1 fc-cache -v
fi
